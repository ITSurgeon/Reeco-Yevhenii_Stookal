# Sysco Scraper Configuration
NODE_ENV=development

# Database Configuration
SYSCO_DB_PATH=./data/sysco.db

# Puppeteer Configuration
HEADLESS=true
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Scraping Configuration
MAX_PAGES_PER_CATEGORY=10
MAX_PRODUCTS_PER_CATEGORY=500

# Location Configuration
SYSCO_LOCATION_ZIP=97209

# Timing Configuration (milliseconds)
DELAY_PAGE_LOAD=3000
DELAY_MODAL_HANDLING=2000
DELAY_BETWEEN_PRODUCTS=500
DELAY_BETWEEN_CATEGORIES=2000
DELAY_AFTER_CATEGORY_CLICK=8000
DELAY_PAGINATION=5000
DELAY_PRODUCT_DETAILS=3000

# Retry Configuration
MAX_RETRIES=3
RETRY_BASE_DELAY=2000

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILES=5
LOG_MAX_SIZE=20m
